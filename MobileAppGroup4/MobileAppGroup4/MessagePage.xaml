<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppGroup4.MessagePage" Title="Сообщения">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="messagesList" SeparatorColor="Black" ItemsSource="{Binding}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout  Orientation="Horizontal">
                                    <StackLayout  Orientation="Vertical">
                                            <Label Text="Вам пользователь"/>
                                            <Label Text="{Binding NameUser}"/>
                                        </StackLayout>
                                        <StackLayout  Orientation="Horizontal">
                                            <Label Text="отправил запрос на дату"/>
                                        <Label Text="{Binding Date}"/>
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>