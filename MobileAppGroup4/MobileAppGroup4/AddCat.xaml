<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppGroup4.AddCat">
    <NavigationPage.TitleView>
        <Label Text="Add cat" FontSize="Large" TextColor="White" Margin="30,0"></Label>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Padding="30">
            <StackLayout  Spacing="20">
                <Entry x:Name="nameProject" Placeholder="Имя проекта"/>
                <Editor x:Name="breedProject" Placeholder="Описание"/>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand" Orientation="Horizontal">
                <Button Text="Отмена" Clicked="Cancel" HorizontalOptions="FillAndExpand"/>
                <Button Text="Добавить" Clicked="SaveProject" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>