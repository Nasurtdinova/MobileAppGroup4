<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppGroup4.App">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="CornerRadius" Value="50"/>
            <Setter Property="BackgroundColor" Value="#B4A390"/>
            <Setter Property="TextColor" Value="Black"/>
        </Style>
        <Style TargetType="Entry">
            <Setter Property="BackgroundColor" Value="#E5E5E5" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
            <Setter Property="HorizontalTextAlignment" Value="Start" />
        </Style>
        <Style TargetType="NavigationPage">
            <Setter Property="BackgroundColor" Value="#B4A390"/>
            <Setter Property="BarBackgroundColor" Value="#B4A390"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="Medium"></Setter>
            <Setter Property="FontFamily" Value="Radley"></Setter>
            <Setter Property="TextColor" Value="Black"></Setter>        
        </Style>
        <Style TargetType="Shell">
            <Setter Property="BackgroundColor" Value="#B4A390"></Setter>
        </Style>
    </Application.Resources>
</Application>
