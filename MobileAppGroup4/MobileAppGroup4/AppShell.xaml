<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:MobileAppGroup4"
             x:Class="MobileAppGroup4.AppShell">
    <Shell.FlyoutHeader>
        <StackLayout BackgroundColor="#C9BE82" Padding="10">
            <Image HeightRequest="100" Source="xamarin.png" />
            <StackLayout Orientation="Horizontal">
                <Label Text="Привет,"/>
                <Label Text="{Binding Iuser.Name}"/>
            </StackLayout>
           
        </StackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="MyCats" Icon="xamarin.png">
        <ShellContent ContentTemplate="{DataTemplate pages:MyCatsPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Catsitter" Icon="xamarin.png">
        <ShellContent ContentTemplate="{DataTemplate pages:BecomeCatsitterPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Become catsitter" Icon="xamarin.png">
        <ShellContent ContentTemplate="{DataTemplate pages:BecomeCatsitterPage}"/>
    </FlyoutItem>
</Shell>